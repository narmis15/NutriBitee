@{
    ViewData["Title"] = "About Us - NutriBite";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<style>
    .about-wrapper {
        padding: 80px 0;
        background: #f8f9fa;
    }

    .about-section {
        display: flex;
        align-items: center;
        gap: 50px;
    }

    .about-img img {
        width: 100%;
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.1);
    }

    .about-content h2 {
        color: #2e7d32;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .about-content p {
        color: #555;
        line-height: 1.7;
    }

    .about-list {
        margin-top: 20px;
    }

        .about-list li {
            margin-bottom: 10px;
            list-style: none;
        }

            .about-list li::before {
                content: "✔ ";
                color: #2e7d32;
                font-weight: bold;
            }

    .btn-green {
        background-color: #2e7d32;
        color: white;
        border-radius: 10px;
        padding: 10px 20px;
        border: none;
        margin-top: 20px;
    }

        .btn-green:hover {
            background-color: #1b5e20;
        }

    /* WHY SECTION */
    .why-section {
        padding: 80px 0;
        background: white;
    }

    .why-card {
        background: #f8f9fa;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        transition: 0.3s;
    }

        .why-card:hover {
            transform: translateY(-5px);
        }

        .why-card h5 {
            color: #2e7d32;
            margin-top: 15px;
        }

    /* STATS SECTION */
    .stats-section {
        background: #2e7d32;
        color: white;
        padding: 60px 0;
        text-align: center;
    }

    .stats-number {
        font-size: 32px;
        font-weight: bold;
    }

    /* CTA */
    .cta-section {
        padding: 80px 0;
        text-align: center;
        background: #f8f9fa;
    }

    @@media (max-width: 768px) {
        .about-section {
            flex-direction: column;
        }
    }
</style>

<div class="about-wrapper">
    <div class="container">
        <div class="about-section">

            <!-- IMAGE -->
            <div class="col-md-6 about-img">
                <img src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c"
                     alt="Healthy Food">
            </div>

            <!-- CONTENT -->
            <div class="col-md-6 about-content">
                <h2>About NutriBite</h2>
                <p>
                    NutriBite is a healthy food platform designed to connect users
                    with nutritious homemade meals. We focus on freshness,
                    balanced nutrition, and affordable meal options for students,
                    families, and working professionals.
                </p>

                <p>
                    Our mission is simple — make healthy eating easy,
                    accessible, and enjoyable for everyone.
                </p>

                <ul class="about-list">
                    <li>Fresh Homemade Meals</li>
                    <li>Calorie-Based Tracking</li>
                    <li>Affordable Daily Plans</li>
                    <li>Trusted Vendors</li>
                </ul>

                <a href="/signup" class="btn btn-green">Get Started</a>
            </div>

        </div>
    </div>
</div>

<!-- WHY CHOOSE US -->
<div class="why-section">
    <div class="container text-center">
        <h2 class="mb-5" style="color:#2e7d32;">Why Choose NutriBite?</h2>
        <div class="row g-4">

            <div class="col-md-4">
                <div class="why-card">
                    <h5>🥗 Balanced Nutrition</h5>
                    <p>Every meal is carefully designed to provide essential nutrients for a healthy lifestyle.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="why-card">
                    <h5>🚚 Fast Delivery</h5>
                    <p>We ensure timely delivery so your meals arrive fresh and ready to enjoy.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="why-card">
                    <h5>💚 Affordable Pricing</h5>
                    <p>Healthy eating shouldn't be expensive — we keep our plans budget-friendly.</p>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- STATS -->
<div class="stats-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="stats-number">10K+</div>
                <p>Happy Users</p>
            </div>
            <div class="col-md-3">
                <div class="stats-number">500+</div>
                <p>Healthy Recipes</p>
            </div>
            <div class="col-md-3">
                <div class="stats-number">100+</div>
                <p>Trusted Vendors</p>
            </div>
            <div class="col-md-3">
                <div class="stats-number">4.8★</div>
                <p>Customer Rating</p>
            </div>
        </div>
    </div>
</div>

<!-- CTA -->
<div class="cta-section">
    <div class="container">
        <h2 style="color:#2e7d32;">Start Your Healthy Journey Today</h2>
        <p class="mt-3">Join thousands of users who trust NutriBite for nutritious homemade meals.</p>
        <a href="/signup" class="btn btn-green mt-3">Create Account</a>
    </div>
</div>
