@{
    ViewData["Title"] = "Sign Up - NutriBite";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-6">
        <div class="card p-4 shadow-sm">
            <h4 class="mb-3">Create an Account</h4>

            <div id="signupError" class="alert alert-danger small" style="display:none;"></div>
            <div id="signupSuccess" class="alert alert-success small" style="display:none;"></div>

            <form id="signupForm" method="post" action="javascript:void(0);">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="name" class="form-label small">Name</label>
                    <input id="name" name="name" type="text" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label small">Email</label>
                    <input id="email" name="email" type="email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label small">Password</label>
                    <div class="input-group">
                        <input id="password" name="password" type="password" class="form-control" required />
                        <button id="togglePasswordReg" class="btn btn-outline-secondary" type="button" tabindex="-1" aria-label="Show password">Show</button>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="confirmPassword" class="form-label small">Confirm Password</label>
                    <div class="input-group">
                        <input id="confirmPassword" name="confirmPassword" type="password" class="form-control" required />
                        <button id="toggleConfirmReg" class="btn btn-outline-secondary" type="button" tabindex="-1" aria-label="Show confirm password">Show</button>
                    </div>
                </div>

                <div class="d-grid">
                    <button id="signupBtn" class="btn btn-success">Sign Up</button>
                </div>

                <div class="mt-3 small text-center">
                    Already have an account? <a href="/login">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        (function () {
            // If already authenticated, redirect to account/dashboard
            $.getJSON('/Auth/IsAuthenticated').done(function (res) {
                if (res && res.authenticated) {
                    window.location.href = '/Users/Account';
                }
            });

            $('#togglePasswordReg').on('click', function () {
                const $pwd = $('#password');
                const type = $pwd.attr('type') === 'password' ? 'text' : 'password';
                $pwd.attr('type', type);
                $(this).text(type === 'password' ? 'Show' : 'Hide').attr('aria-label', type === 'password' ? 'Show password' : 'Hide password');
            });
            $('#toggleConfirmReg').on('click', function () {
                const $pwd = $('#confirmPassword');
                const type = $pwd.attr('type') === 'password' ? 'text' : 'password';
                $pwd.attr('type', type);
                $(this).text(type === 'password' ? 'Show' : 'Hide').attr('aria-label', type === 'password' ? 'Show confirm password' : 'Hide confirm password');
            });

            $('#signupForm').on('submit', function (e) {
                e.preventDefault();
                $('#signupError').hide();
                $('#signupSuccess').hide();

                var name = $('#name').val().trim();
                var email = $('#email').val().trim();
                var password = $('#password').val();
                var confirm = $('#confirmPassword').val();

                if (!name || !email || !password || !confirm) {
                    $('#signupError').text('All fields are required.').show();
                    return;
                }
                if (password !== confirm) {
                    $('#signupError').text('Passwords do not match.').show();
                    return;
                }

                var token = $('input[name="__RequestVerificationToken"]').first().val() || '';

                $.post('/Auth/Register', { name: name, email: email, password: password, __RequestVerificationToken: token })
                    .done(function (res) {
                        if (res && res.success) {
                            // redirect to login per requirement
                            window.location.href = '/login';
                        } else {
                            $('#signupError').text(res && res.message ? res.message : 'Registration failed.').show();
                        }
                    }).fail(function () {
                        $('#signupError').text('Unable to reach server. Please try again.').show();
                    });
            });
        })();
    </script>
}