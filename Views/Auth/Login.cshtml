@{
    ViewData["Title"] = "Login - NutriBite";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card p-4 shadow-sm">
            <h4 class="mb-3">Login</h4>

            <div id="loginError" class="alert alert-danger small" style="display:none;"></div>

            <form id="loginForm" method="post" action="javascript:void(0);">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="email" class="form-label small">Email</label>
                    <input id="email" name="email" type="email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label small">Password</label>
                    <div class="input-group">
                        <input id="password" name="password" type="password" class="form-control" required aria-describedby="togglePassword" />
                        <button id="togglePassword" class="btn btn-outline-secondary" type="button" tabindex="-1" aria-label="Show password">Show</button>
                    </div>
                </div>

                <div class="d-grid">
                    <button id="loginBtn" class="btn btn-success">Login</button>
                </div>

                <div class="mt-3 d-flex justify-content-between small">
                    <div>Don't have an account? <a href="/signup">Sign up</a></div>
                    <div><a href="/Auth/Forgot">Forgot password?</a></div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        (function () {
            // If already authenticated, redirect to account/dashboard
            $.getJSON('/Auth/IsAuthenticated').done(function (res) {
                if (res && res.authenticated) {
                    window.location.href = '/Users/Account';
                }
            });

            // Toggle password visibility
            $('#togglePassword').on('click', function () {
                const $pwd = $('#password');
                const type = $pwd.attr('type') === 'password' ? 'text' : 'password';
                $pwd.attr('type', type);
                $(this).text(type === 'password' ? 'Show' : 'Hide').attr('aria-label', type === 'password' ? 'Show password' : 'Hide password');
            });

            $('#loginForm').on('submit', function (e) {
                e.preventDefault();
                $('#loginError').hide();

                var email = $('#email').val().trim();
                var password = $('#password').val();

                if (!email || !password) {
                    $('#loginError').text('Please enter email and password.').show();
                    return;
                }

                // read antiforgery token value from rendered input
                var token = $('input[name="__RequestVerificationToken"]').first().val() || '';

                $.post('/Auth/Login', { email: email, password: password, __RequestVerificationToken: token })
                    .done(function (res) {
                        if (res && res.success) {
                            // redirect to user account/dashboard
                            window.location.href = '/Users/Account';
                        } else {
                            $('#loginError').text(res && res.message ? res.message : 'Invalid login credentials.').show();
                        }
                    }).fail(function () {
                        $('#loginError').text('Unable to reach server. Please try again.').show();
                    });
            });
        })();
    </script>
}