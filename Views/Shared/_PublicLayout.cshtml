@*
    Public layout for NutriBite — updated to include explicit Login and Sign Up buttons in navbar.
    Kept styling, spacing and responsiveness unchanged.
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NutriBite</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Public CSS (site + home) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

    @RenderSection("HeadExtras", required: false)
    <style>
        /* small public-only helpers */
        .navbar-brand { font-weight: 800; color: #16a34a !important; }
        .hero-cta { margin-top: 20px; }
        footer.site-footer { background:#0b1220; color:#fff; padding:28px 0; margin-top:32px; }
        footer.site-footer a { color: #d1fae5; text-decoration: none; }
        footer.site-footer a:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container">
                <a class="navbar-brand" href="/">NutriBite</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#publicNav"
                        aria-controls="publicNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="publicNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Menu">Menu</a></li>
                        <li class="nav-item"><a class="nav-link" href="/About">About</a></li>
                    </ul>

                    <div class="d-flex align-items-center">
                        <a id="cartBtnPublic" class="btn btn-outline-secondary me-2 d-none" href="/Cart">Cart</a>

                        <!-- NEW: Login & Sign Up buttons side-by-side (preserve styles/spacing) -->
                        <a id="loginBtnPublic" class="btn btn-sm btn-outline-secondary me-2" href="/login">Login</a>
                        <a id="signupBtnPublic" class="btn btn-sm btn-success" href="/signup">Sign Up</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="container my-4">
            @RenderBody()
        </div>
    </main>

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <strong>NutriBite</strong>
                    <div class="small text-muted">Fresh, healthy meals delivered fast.</div>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="/Terms" class="me-3">Terms</a>
                    <a href="/Privacy" class="me-3">Privacy</a>
                    <span class="small text-muted">© @DateTime.Now.Year NutriBite</span>
                </div>
            </div>
        </div>
    </footer>

    <!-- Core scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Auth modal partial (kept for modal flows elsewhere) -->
    @await Html.PartialAsync("_AuthModal")

    <script>
        (function () {
            // update auth UI (public)
            function updateAuthUI() {
                $.getJSON('/Auth/IsAuthenticated')
                    .done(function (res) {
                        var loginBtn = document.getElementById('loginBtnPublic');
                        var signupBtn = document.getElementById('signupBtnPublic');
                        var cart = document.getElementById('cartBtnPublic');

                        if (res && res.authenticated) {
                            // hide login/signup, show cart/profile link
                            if (loginBtn) loginBtn.style.display = 'none';
                            if (signupBtn) signupBtn.style.display = 'none';
                            if (cart) cart.classList.remove('d-none');
                        } else {
                            if (loginBtn) loginBtn.style.display = '';
                            if (signupBtn) signupBtn.style.display = '';
                            if (cart) cart.classList.add('d-none');
                        }
                    })
                    .fail(function () {
                        // keep default guest state
                    });
            }

            document.addEventListener('DOMContentLoaded', function () {
                updateAuthUI();

                // listen for login event emitted by modal / pages
                document.addEventListener('user:login', function () {
                    updateAuthUI();
                });
            });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>