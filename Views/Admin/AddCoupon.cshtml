@{
    ViewData["Title"] = "Add Coupon";
}

<div class="container" style="max-width:800px; margin-top:24px;">
    <h2 class="mb-3">Add Coupon</h2>

    <div class="card">
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form action="@Url.Action("AddCoupon", "Admin")" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-12">
                        <label for="CouponCode" class="form-label">Enter coupon code</label>
                        <input type="text" id="CouponCode" name="CouponCode" class="form-control" required />
                    </div>

                    <div class="col-12">
                        <label for="Discount" class="form-label">Enter discount (%)</label>
                        <input type="number" id="Discount" name="Discount" class="form-control"
                               min="0" max="100" step="0.01" inputmode="decimal" required />
                    </div>

                    <div class="col-md-6">
                        <label for="StartDate" class="form-label">Enter start date</label>
                        <input type="date" id="StartDate" name="StartDate" class="form-control" required />
                    </div>

                    <div class="col-md-6">
                        <label for="EndDate" class="form-label">Enter end date</label>
                        <input type="date" id="EndDate" name="EndDate" class="form-control" required />
                    </div>

                    <div class="col-12 mt-3">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
