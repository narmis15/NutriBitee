@{
    ViewData["Title"] = "Admin Login";
    Layout = null;   
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <style>
        :root {
            --green: #63B34E;
            --light-green: #EAF6E7;
            --white: #FFFFFF;
            --text-dark: #2E2E2E;
            --text-muted: #8A8A8A;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: var(--light-green);
        }

        .login-box {
            width: 350px;
            background: var(--white);
            margin: 150px auto;
            padding: 30px;
            text-align: center;
            border-radius: 6px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .login-box h2 {
            margin-bottom: 20px;
            color: var(--text-dark);
        }

        .txt {
            width: 90%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid var(--text-muted);
            border-radius: 4px;
        }

        .btn {
            width: 95%;
            padding: 10px;
            background: var(--green);
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 4px;
        }

        .btn:hover {
            background: #4fa03d;
        }

        .error {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="login-box">
        <h2>Admin Login</h2>

        <form asp-action="Login" asp-controller="Admin" method="post">
            @Html.AntiForgeryToken()

            <input type="text"
                   name="UserId"
                   class="txt"
                   placeholder="User ID"
                   required />

            <input type="password"
                   name="Password"
                   class="txt"
                   placeholder="Password"
                   required />

            <button type="submit" class="btn">Login</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="error">@ViewBag.Error</div>
        }
    </div>
</body>
</html>

