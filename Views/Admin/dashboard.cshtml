@{
    ViewData["Title"] = "Nutribite Admin Dashboard";
    // Use the same shared admin layout used by other admin pages
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<div class="dashboard-main">
    <div class="dashboard-header">
        <h2>Admin Dashboard</h2>
        <div class="dashboard-breadcrumb">Admin / Home</div>
    </div>

    <div class="dashboard-cards">
        <div class="db-card">
            <h3>@ViewBag.Users</h3>
            <p>No of Users</p>
        </div>

        <div class="db-card green">
            <h3>@ViewBag.Vendors</h3>
            <p>No of Vendors</p>
        </div>

        <div class="db-card orange">
            <h3>@ViewBag.Orders</h3>
            <p>No of Orders</p>
        </div>

        <div class="db-card red">
            <h3>@ViewBag.Products</h3>
            <p>Products Sold</p>
        </div>

        <div class="db-card purple">
            <h3>₹ @ViewBag.TotalAmount</h3>
            <p>Total Amount</p>
        </div>

        <div class="db-card dark">
            <h3>₹ @ViewBag.Profit</h3>
            <p>Profit Share</p>
        </div>
    </div>
</div>
