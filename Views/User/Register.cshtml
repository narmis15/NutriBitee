@{
    ViewData["Title"] = "User Register";
}

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #f5f7f6 0%, #e8f5e9 100%);
    }

    /* ===== MAIN WRAPPER ===== */
    .auth-container {
        min-height: calc(100vh - 70px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
    }

    /* ===== SPLIT BOX ===== */
    .auth-box {
        width: 950px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 25px 60px rgba(0,0,0,0.08);
        animation: fadeIn 0.6s ease-in-out;
    }

    /* ===== LEFT SIDE ===== */
    .auth-left {
        background: #2e7d32;
        color: white;
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .auth-left h1 {
            font-size: 34px;
            margin-bottom: 15px;
        }

        .auth-left p {
            font-size: 15px;
            opacity: 0.9;
            line-height: 1.6;
        }

    /* ===== RIGHT SIDE ===== */
    .auth-right {
        padding: 50px 40px;
    }

    /* LOGO */
    .logo {
        font-size: 22px;
        font-weight: 600;
        color: #2e7d32;
        margin-bottom: 30px;
    }

    /* TITLE */
    .auth-right h2 {
        margin-bottom: 30px;
        font-weight: 600;
        color: #333;
    }

    /* INPUT GROUP */
    .input-group {
        margin-bottom: 18px;
    }

        .input-group label {
            font-size: 13px;
            display: block;
            margin-bottom: 6px;
            color: #555;
        }

        .input-group input {
            width: 100%;
            padding: 12px 14px;
            border-radius: 8px;
            border: 1px solid #ddd;
            outline: none;
            transition: 0.3s;
        }

            .input-group input:focus {
                border-color: #2e7d32;
                box-shadow: 0 0 0 3px rgba(46,125,50,0.1);
            }

    /* BUTTON */
    .btn-register {
        width: 100%;
        padding: 13px;
        border-radius: 8px;
        border: none;
        background: #2e7d32;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 5px;
    }

        .btn-register:hover {
            background: #256a28;
        }

    /* LINK */
    .auth-link {
        margin-top: 18px;
        font-size: 14px;
    }

        .auth-link a {
            color: #2e7d32;
            text-decoration: none;
            font-weight: 500;
        }

            .auth-link a:hover {
                text-decoration: underline;
            }

    /* ANIMATION */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* RESPONSIVE */
    @@media(max - width: 900px)

    {
        .auth-box

    {
        grid-template-columns: 1fr;
    }

    .auth-left {
        display: none;
    }

    }
</style>

<div class="auth-container">
    <div class="auth-box">

        <!-- LEFT SIDE -->
        <div class="auth-left">
            <h1>Join NutriBite 🥗</h1>
            <p>
                Create your account and start discovering
                healthy homemade meals prepared with love.
                Your journey to better nutrition starts here.
            </p>
        </div>

        <!-- RIGHT SIDE -->
        <div class="auth-right">

            <div class="logo">NutriBite</div>

            <h2>Create Account</h2>

            <form action="/User/Dashboard" method="post">

                <div class="input-group">
                    <label>Full Name</label>
                    <input type="text" required placeholder="Enter your full name">
                </div>

                <div class="input-group">
                    <label>Email</label>
                    <input type="email" required placeholder="Enter your email">
                </div>

                <div class="input-group">
                    <label>Password</label>
                    <input type="password" required placeholder="Create password">
                </div>

                <button type="submit" class="btn-register">Sign Up</button>

                <div class="auth-link">
                    Already have an account?
                    <a href="/User/Login">Login here</a>
                </div>

            </form>
        </div>

    </div>
</div>
