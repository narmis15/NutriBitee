@{
    ViewData["Title"] = "Vendor";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="vendor-auth-wrapper">
    <div class="vendor-auth-card">

        <div class="vendor-left">
            <h2>Welcome to NutriBite</h2>
            <p>
                Healthy homemade meals crafted with care.
                Manage your food items and orders easily.
            </p>
        </div>

        <div class="vendor-right">
            <h3 class="brand">NutriBite</h3>
            <h5 class="mb-3">Welcome Back 👋</h5>

            <form method="post" asp-action="Login">

                <div class="mb-3">
                    <label>Email</label>
                    <input type="email" name="Email" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>Password</label>
                    <input type="password" name="Password" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-success w-100 mt-2">
                    Login
                </button>

                <div class="auth-links">
                    <a href="/Vendor/Register">Sign up</a>
                    <a asp-controller="Vendor" asp-action="ForgotPassword">
                        Forgot password?
                    </a>
                </div>

            </form>
        </div>

    </div>
</div>

<style>
.vendor-auth-wrapper {
    min-height: 90vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.vendor-auth-card {
    width: 900px;
    display: flex;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    background: #fff;
}

.vendor-left {
    width: 50%;
    background: #2e7d32;
    color: white;
    padding: 60px 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.vendor-left h2 {
    font-weight: 600;
    margin-bottom: 20px;
}

.vendor-left p {
    opacity: 0.9;
}

.vendor-right {
    width: 50%;
    padding: 50px 40px;
}

.brand {
    color: #2e7d32;
    font-weight: 600;
}

.auth-links {
    margin-top: 15px;
    display: flex;
    justify-content: space-between;
}

.auth-links a {
    font-size: 14px;
    color: #2e7d32;
    text-decoration: none;
}

.auth-links a:hover {
    text-decoration: underline;
}

@@media (max-width: 768px) {
    .vendor-auth-card {
        flex-direction: column;
        width: 95%;
    }

    .vendor-left,
    .vendor-right {
        width: 100%;
    }
}
</style>
