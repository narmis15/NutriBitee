@{
    ViewData["Title"] = "Vendor Dashboard";
    Layout = null; /* Important: disables global layout spacing issues */
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Vendor Dashboard - NutriBite</title>

    <style>
        /* ===== RESET ===== */
        * {
            box-sizing: border-box;
        }

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
            font-family: 'Segoe UI', sans-serif;
            background: #f6fbf4;
        }

        /* ===== LAYOUT ===== */
        .vendor-layout {
            display: flex;
            height: 100vh;
            width: 100%;
        }

        /* ===== SIDEBAR ===== */
        .vendor-sidebar {
            width: 240px;
            background: #ffffff;
            padding: 24px 18px;
            box-shadow: 2px 0 12px rgba(0,0,0,0.04);
        }

            .vendor-sidebar h2 {
                color: #63B34E;
                margin-bottom: 30px;
            }

            .vendor-sidebar a {
                display: block;
                padding: 10px 14px;
                margin-bottom: 10px;
                border-radius: 8px;
                text-decoration: none;
                color: #333;
                font-size: 15px;
            }

                .vendor-sidebar a.active,
                .vendor-sidebar a:hover {
                    background: #eaf6e7;
                    color: #63B34E;
                }

            .vendor-sidebar .logout {
                margin-top: 40px;
                color: #d9534f;
            }

        /* ===== CONTENT ===== */
        .vendor-content {
            flex: 1;
            padding: 32px 40px;
            overflow-y: auto;
        }

        /* ===== HEADER ===== */
        .vendor-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 28px;
        }

            .vendor-header h1 {
                margin: 0;
                font-size: 28px;
                color: #2e2e2e;
            }

        .add-btn {
            background: #63B34E;
            color: #fff;
            border: none;
            padding: 10px 18px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
        }

        /* ===== STATS ===== */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: #fff;
            border-radius: 14px;
            padding: 22px;
            text-align: center;
            box-shadow: 0 8px 24px rgba(0,0,0,0.04);
        }

            .stat-card p {
                margin: 0;
                color: #777;
                font-size: 14px;
            }

            .stat-card h3 {
                color: #63B34E;
                font-size: 28px;
                margin: 10px 0 0;
            }

        /* ===== ACTIONS ===== */
        .action-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        .action-card {
            background: #fff;
            padding: 22px;
            border-radius: 14px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.04);
        }

            .action-card h3 {
                margin-top: 0;
                font-size: 18px;
            }

            .action-card p {
                color: #666;
                font-size: 14px;
            }

            .action-card button {
                margin-top: 12px;
                padding: 8px 14px;
                background: #eaf6e7;
                border: none;
                border-radius: 6px;
                cursor: pointer;
            }
    </style>
</head>

<body>

    <div class="vendor-layout">

        <!-- ===== SIDEBAR ===== -->
        <aside class="vendor-sidebar">
            <h2>NutriBite</h2>

            <a class="active" href="/Vendor/Dashboard">Dashboard</a>
            <a href="/Vendor/MyFood">My Foods</a>
            <a href="/Vendor/AddFood">Add Food</a>
            <a href="#">Orders</a>
            <a href="#">Profile</a>

            <a class="logout" href="/Vendor/Logout">Logout</a>
        </aside>

        <!-- ===== MAIN CONTENT ===== -->
        <main class="vendor-content">

            <div class="vendor-header">
                <h1>Vendor Dashboard</h1>
                <button class="add-btn">+ Add New Food</button>
            </div>

            <!-- STATS -->
            <div class="stats-grid">
                <div class="stat-card">
                    <p>Total Foods</p>
                    <h3>12</h3>
                </div>

                <div class="stat-card">
                    <p>Active Foods</p>
                    <h3>9</h3>
                </div>

                <div class="stat-card">
                    <p>Pending Orders</p>
                    <h3>4</h3>
                </div>

                <div class="stat-card">
                    <p>Total Sales</p>
                    <h3>₹8,200</h3>
                </div>
            </div>

            <!-- ACTIONS -->
            <div class="action-grid">
                <div class="action-card">
                    <h3>Manage Foods</h3>
                    <p>Add, edit or remove food items.</p>
                    <button>View Foods</button>
                </div>

                <div class="action-card">
                    <h3>Edit Profile</h3>
                    <p>Update vendor details.</p>
                    <button>Edit Profile</button>
                </div>

                <div class="action-card">
                    <h3>View Orders</h3>
                    <p>Check and manage orders.</p>
                    <button>View Orders</button>
                </div>
            </div>

        </main>
    </div>

</body>
</html>
