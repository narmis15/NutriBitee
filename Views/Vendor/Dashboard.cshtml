@{
    ViewData["Title"] = "Vendor";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="dashboard-container">

    <h2 class="dashboard-title">Vendor Dashboard</h2>

    <!-- KPI CARDS -->
    <div class="kpi-grid">
        <div class="kpi-card">
            <h4>120</h4>
            <p>Total Orders</p>
        </div>

        <div class="kpi-card">
            <h4>₹45,000</h4>
            <p>Total Revenue</p>
        </div>

        <div class="kpi-card">
            <h4>18</h4>
            <p>Total Food Items</p>
        </div>

        <div class="kpi-card">
            <h4>6</h4>
            <p>Pending Orders</p>
        </div>
    </div>

    <!-- MAIN GRID -->
    <div class="dashboard-grid">

        <!-- Revenue Section -->
        <div class="dashboard-card">
            <h5>Revenue Overview</h5>
            <div class="chart-placeholder">
                Revenue chart will appear here
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="dashboard-card">
            <h5>Quick Actions</h5>
            <div class="quick-actions">
                <a href="/Vendor/AddFood" class="action-btn">+ Add Food</a>
                <a href="/Vendor/Orders" class="action-btn">View Orders</a>
                <a href="/Vendor/MyFood" class="action-btn">Manage Menu</a>
                <a href="/Vendor/Profile" class="action-btn">Edit Profile</a>
            </div>
        </div>

    </div>

    <!-- Recent Orders -->
    <div class="dashboard-card">
        <h5>Recent Orders</h5>

        <table class="dashboard-table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>#1023</td>
                    <td>Rahul</td>
                    <td>₹450</td>
                    <td><span class="status pending">Pending</span></td>
                    <td>16 Feb 2026</td>
                </tr>
                <tr>
                    <td>#1022</td>
                    <td>Anjali</td>
                    <td>₹720</td>
                    <td><span class="status completed">Delivered</span></td>
                    <td>15 Feb 2026</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>

<style>

.dashboard-container {
    padding: 30px;
}

.dashboard-title {
    margin-bottom: 25px;
    font-weight: 600;
}

.kpi-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.kpi-card {
    background: #ffffff;
    padding: 25px;
    border-radius: 15px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.05);
    text-align: center;
}

.kpi-card h4 {
    font-size: 28px;
    color: #2e7d32;
    margin-bottom: 5px;
}

.dashboard-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 20px;
    margin-bottom: 30px;
}

.dashboard-card {
    background: #ffffff;
    padding: 25px;
    border-radius: 15px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.05);
}

.chart-placeholder {
    height: 200px;
    background: #f4f6f8;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #888;
}

.quick-actions {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.action-btn {
    display: block;
    padding: 10px;
    background: #2e7d32;
    color: white;
    text-align: center;
    border-radius: 8px;
    text-decoration: none;
}

.action-btn:hover {
    opacity: 0.9;
}

.dashboard-table {
    width: 100%;
    border-collapse: collapse;
}

.dashboard-table th,
.dashboard-table td {
    padding: 10px;
    text-align: left;
}

.dashboard-table thead {
    border-bottom: 1px solid #ddd;
}

.status {
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 12px;
}

.pending {
    background: #fff3cd;
    color: #856404;
}

.completed {
    background: #d4edda;
    color: #155724;
}

@@media (max-width: 768px) {
    .dashboard-grid {
        grid-template-columns: 1fr;
    }
}

</style>
