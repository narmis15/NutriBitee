@{
    ViewData["Title"] = "Vendor Dashboard";
}

<div class="vendor-dashboard">

    <!-- Header -->
    <div class="vendor-header">
        <h2>Welcome, Vendor 👋</h2>
        <button class="logout-btn">Logout</button>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <h3>12</h3>
            <p>Total Products</p>
        </div>

        <div class="stat-card">
            <h3>8</h3>
            <p>Total Orders</p>
        </div>

        <div class="stat-card">
            <h3>3</h3>
            <p>Pending Orders</p>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="actions-grid">
        <div class="action-card">➕ Add Product</div>
        <div class="action-card">📦 View Orders</div>
        <div class="action-card">👤 Profile</div>
    </div>

</div>
