@{
    ViewData["Title"] = "Vendor";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

<style>
    body {
        margin: 0;
        background: #f3faef;
        font-family: 'Segoe UI', sans-serif;
    }

    .profile-wrapper {
        max-width: 900px;
        margin: 40px auto;
        background: white;
        padding: 30px 40px;
        border-radius: 14px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    h2 {
        color: #63B34E;
        text-align: center;
        margin-bottom: 25px;
    }

    .profile-top {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
    }

    .profile-img {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #63B34E;
    }

    .profile-name h3 {
        margin: 0;
    }

    .profile-name p {
        margin: 4px 0 0;
        color: #666;
        font-size: 14px;
    }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-size: 14px;
    }

    input, textarea {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 14px;
    }

    textarea {
        resize: none;
    }

    button {
        width: 100%;
        padding: 14px;
        background: #63B34E;
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        cursor: pointer;
        margin-top: 10px;
    }
</style>

<div class="profile-wrapper">
    <h2>Vendor Profile</h2>

    <div class="profile-top">
        <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png"
             class="profile-img" />
        <div class="profile-name">
            <h3>Healthy Foods Store</h3>
            <p>vendor@email.com</p>
        </div>
    </div>

    <form>
        <div class="form-group">
            <label>Vendor Name</label>
            <input type="text" value="Healthy Foods Store">
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" value="vendor@email.com">
        </div>

        <div class="form-group">
            <label>Phone</label>
            <input type="text" value="+91 9876543210">
        </div>

        <div class="form-group">
            <label>Address</label>
            <textarea rows="3">Bangalore, India</textarea>
        </div>

        <button>Update Profile</button>
    </form>
</div>
