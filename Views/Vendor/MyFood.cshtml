@{
    ViewData["Title"] = "My Foods";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            margin: 0;
            background: #f3faef;
            font-family: 'Segoe UI', sans-serif;
        }

        .page-wrapper {
            max-width: 1200px;
            margin: 30px auto;
            padding: 0 20px;
        }

        /* ===== HEADER ===== */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

            .page-header h2 {
                color: #63B34E;
                margin: 0;
            }

        .add-btn {
            background: #63B34E;
            color: white;
            padding: 10px 18px;
            border-radius: 8px;
            text-decoration: none;
            font-size: 14px;
        }

        /* ===== GRID ===== */
        .food-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
        }

        /* ===== CARD ===== */
        .food-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
            transition: transform 0.2s;
        }

            .food-card:hover {
                transform: translateY(-4px);
            }

        .food-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .food-body {
            padding: 18px;
        }

            .food-body h4 {
                margin: 0 0 6px;
                color: #333;
            }

        .food-meta {
            font-size: 14px;
            color: #777;
            margin-bottom: 10px;
        }

        .tag {
            display: inline-block;
            background: #e6f5e1;
            color: #2e7d32;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            margin-bottom: 12px;
        }

        .actions {
            display: flex;
            gap: 10px;
            margin-top: 12px;
        }

        .btn {
            flex: 1;
            padding: 10px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }

        .edit {
            background: #63B34E;
            color: white;
        }

        .delete {
            background: #ffe6e6;
            color: #c62828;
        }

        .btn {
            text-align: center;
            text-decoration: none;
        }

    </style>
</head>

<body>

    <div class="page-wrapper">

        <!-- HEADER -->
        <div class="page-header">
            <h2>My Foods</h2>
            <a href="/Vendor/AddFood" class="add-btn">+ Add New Food</a>
        </div>

        <!-- FOOD GRID -->
        <div class="food-grid">

            <!-- FOOD CARD 1 -->
            <div class="food-card">
                <img class="food-image"
                     src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c"
                     alt="Food">

                <div class="food-body">
                    <h4>Healthy Veg Bowl</h4>
                    <div class="food-meta">350 Calories · ₹199</div>
                    <div class="tag">Vegetarian</div>

                    <div class="actions">
                        <button class="btn edit">Edit</button>
                        <button class="btn delete">Delete</button>
                    </div>
                </div>
            </div>

            <!-- FOOD CARD 2 -->
            <div class="food-card">
                <img class="food-image"
                     src="https://images.unsplash.com/photo-1555939594-58d7cb561ad1"
                     alt="Food">

                <div class="food-body">
                    <h4>Protein Salad</h4>
                    <div class="food-meta">420 Calories · ₹249</div>
                    <div class="tag">High Protein</div>

                    <div class="actions">
                        <a href="/Vendor/EditFood" class="btn edit">Edit</a>

                        <button class="btn delete" type="button" onclick="openModal()">Delete</button>

                    </div>
                </div>
            </div>

            <!-- FOOD CARD 3 -->
            <div class="food-card">
                <img class="food-image"
                     src="https://images.unsplash.com/photo-1504674900247-0877df9cc836"
                     alt="Food">

                <div class="food-body">
                    <h4>Fruit Smoothie</h4>
                    <div class="food-meta">180 Calories · ₹149</div>
                    <div class="tag">Vegan</div>

                    <div class="actions">
                        <a href="/Vendor/EditFood" class="btn edit">Edit</a>
                        <button class="btn delete" type="button" onclick="openModal()">Delete</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- DELETE MODAL -->
    <div id="deleteModal" style="display:none; position:fixed; inset:0; background:rgba(0,0,0,.4);">
        <div style="background:white; width:360px; margin:200px auto; padding:25px; border-radius:12px; text-align:center;">
            <h3>Delete Food?</h3>
            <p>This action cannot be undone.</p>

            <button onclick="closeModal()" style="padding:10px 18px; margin-right:10px;">Cancel</button>
            <button style="padding:10px 18px; background:#d9534f; color:white;">Delete</button>
        </div>
    </div>

    <script>
        function openModal() {
            document.getElementById("deleteModal").style.display = "block";
        }
        function closeModal() {
            document.getElementById("deleteModal").style.display = "none";
        }
    </script>

</body>
</html>
